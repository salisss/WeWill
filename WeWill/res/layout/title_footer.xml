<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#37395c"
    android:padding="4dp"
    android:layout_height="50dp" >

    <LinearLayout 
        android:id="@+id/zhuye"
        android:layout_centerVertical="true"
        android:layout_width="60dip"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/zhuye_btn"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_marginLeft="4dp"
        android:background="@drawable/zhuye_bt"
        tools:ignore="RtlHardcoded" />
	</LinearLayout>
 
    
	<Button
        android:id="@+id/dinggou_btn"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_toLeftOf="@+id/guanyu_btn"
        android:layout_marginRight="35dp"
        android:layout_centerVertical="true"
        android:background="@drawable/dinggou"
        tools:ignore="RtlHardcoded"  />
	
    <Button
        android:id="@+id/guanyu_btn"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:background="@drawable/guanyu"
        tools:ignore="RtlHardcoded" />
    
        <Button
        android:id="@+id/guanli_btn"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:background="@drawable/guanli"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>
