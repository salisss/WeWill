<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#37395c"
    android:padding="4dp"
    android:layout_height="50dp" >

    <LinearLayout 
        android:id="@+id/back_btn_linear"
        android:layout_centerVertical="true"
        android:layout_width="60dip"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/back_btn"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_marginLeft="4dp"
        android:background="@drawable/arrow_left64"
        tools:ignore="RtlHardcoded" />
	</LinearLayout>
	
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textColor="#ffffff"/>
    
	<Button
        android:id="@+id/refresh_btn"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_toLeftOf="@+id/right_btn"
        android:layout_marginRight="35dp"
        android:layout_centerVertical="true"
        android:background="@drawable/refrash64"
        tools:ignore="RtlHardcoded"  />
	
    <Button
        android:id="@+id/right_btn"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:background="@drawable/scan_icon64"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>